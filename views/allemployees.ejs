<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">

    <title>department employees</title>
</head>
<style>
    .bg-color{
        background-color: #d5deb6;
        font-family: 'Calibri', sans-serif;
    }
    h1{
        text-transform: capitalize;
    }
    .back-color{
        background-image: linear-gradient(120deg,#a6c0fe 0,#f68084 100%);
    }
</style>

<body class="bg-color">

    <div class="container my-5 shadow depts d-flex back-color">
        <div class="row">
           <div class="col py-5">
            <h1 class="text-center"> all employee details </h1>
            <% if(typeof emp !='undefined' ){ %>
                <% emp.forEach(i=>{ %>

                    <div class="card m-5">
                        <div class="card-header">
                            <img class="card-img-top " src="image/<%- i.emp_image %>" alt="Card image cap">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                <span>Employee Name : </span>
                                <%- i.emp_name%>
                            </h5>
                            <p class="card-text">
                                <span>Employee Email : </span>
                                <%- i.emp_email%>
                            </p>
                            <!-- <a href="" class="btn btn-primary   w-100"> Add Department</a> -->
                            <p class="card-text">
                                <span> department name : </span>
                                <%- i.dept_name%>
                            </p>
                        </div>
                    </div>
                    <%}); %>
                        <% } %>
           </div>
        </div>
    </div>





    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>


</body>

</html>